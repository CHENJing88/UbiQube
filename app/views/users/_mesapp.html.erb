<% @mesapps.each do |mesapp|%>
  <!-- c'est la carte de chaque App -->
  <%#= link_to :url=>{:controller => "apps", :action => "show", :app => mesapp.apps},remote: true, onclick: "$('#show_app_modal').modal('show');"do data-backdrop="static" ,remote:true%>
  <%= link_to app_path(mesapp.apps), data:{remote:true, traget:"#show_app_modal"} do%>
  <%#= link_to app_path(mesapp.apps),'data-toggle'=>"modal", 'data-target'=> "#show_app_modal" do %>
    <li class="custom-card">
      <p><%= mesapp.apps.nom %></p>
      <p><%= mesapp.roles.nom %></p>
    </li>
  <% end %>

  <div class="modal fade" id="show_app_modal" tabindex="-1" role="dialog" aria-labelledby="modalTitle" data-keyboard="false">
    <div class="modal-dialog">
      <div class="modal-content"></div>
    </div>
  </div>

<% end %>

<%= link_to new_app_path, data:{remote:true, traget:"#new_app_modal"} do%>
  <li class="nouvel-card" >
    <p>Créer une nouvelle App</p>
  </li>
<% end %>

<div id="new_app_modal" class="modal fade" role="dialog"  aria-labelledby="ModalLabel" data-keyboard="false" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content"></div>
  </div>
</div>
<h2>创建模态框（Modal）</h2>
<!-- 按钮触发模态框 -->
<button class="btn btn-primary btn-lg" data-toggle="modal"
   data-target="#myModal">
   开始演示模态框
</button>

<!-- 模态框（Modal） -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog"
   aria-labelledby="myModalLabel" aria-hidden="true">
   <div class="modal-dialog">
      <div class="modal-content">
         <div class="modal-header">
            <button type="button" class="close"
               data-dismiss="modal" aria-hidden="true">
                  &times;
            </button>
            <h4 class="modal-title" id="myModalLabel">
               模态框（Modal）标题
            </h4>
         </div>
         <div class="modal-body">
            在这里添加一些文本
         </div>
         <div class="modal-footer">
            <button type="button" class="btn btn-default"
               data-dismiss="modal">关闭
            </button>
            <button type="button" class="btn btn-primary">
               提交更改
            </button>
         </div>
      </div><!-- /.modal-content -->
</div><!-- /.modal -->
