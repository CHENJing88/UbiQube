<div class="container">
  <div class="row">
    <div class="column">
      <h3>Profile de l'utilisateur</h3>
      <table class="table table-hover table-bordered">
        <tbody>
          <tr>
            <td>UID</td>
            <td><%= @user.uid if @user.uid %></td>
          </tr>

          <tr>
            <td>Email</td>
            <td><%= @ldap_info[0].mail[0] %></td>
          </tr>
          <tr>
            <td>Fonct</td>
            <td><%= @ldap_info[0].ufrcomposante[0] %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
