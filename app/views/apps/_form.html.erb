<%#= form_for @app do |f| %>
  <div class="field">

    <%= f.label :nom %><%= f.text_field :nom, :size => 30  %>
    <%= f.label :niveau %><%= f.select(:niveau_id, Niveau.all.map { |niveau| [niveau.nom, niveau.id] }, :prompt => true) %>

    <%= f.label :etat %><%= f.select(:etat_app_id, Niveau.all.map { |etat_app| [etat_app.nom, etat_app.id] }, :prompt => true) %>
    <%= f.label :etape %><%= f.select(:etape_app_id, Niveau.all.map { |etape_app| [etape_app.nom, etape_app.id] }, :prompt => true) %>
    <%= f.label :groupe %><%= f.select(:groupe_app_id, Niveau.all.map { |groupe_app| [groupe_app.nom, groupe_app.id] }, :prompt => true) %>

    <%= f.fields_for :user_app_roles, @app.user_app_roles.build do |relation_fields|%>
      <%= relation_fields.hidden_field :user_id, :value => current_user.id %>
      <%= relation_fields.hidden_field :role_id, :value => 1 %>
    <% end %>

    <%= f.label :description %><%= f.text_area :description %>
  </div>

<%# end %>
