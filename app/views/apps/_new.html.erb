<div data-reveal id="new_app_modal" class="reveal-modal" role="dialog" aria-labelledby="ModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <h4 class="modal-title" id="ModalLabel">Créer App</h4>
      </div>

      <div class="modal-body">
        <%#= render new_app_path, modal:false %>
        <div id="content">
          <!--h1>Créer App</h1-->

          <%#= render 'form' %>

          <%#= link_to 'Créer',mesapps_path(current_user[:id]) %>
          <%= form_for @app do |form_app| %>
        <%#= render 'layouts/error_message', object: form_app.object %>

          <div class="field">
            <%= form_app.label :nom %><br/>
            <%= form_app.text_field :nom, placeholder: "App Nom...", :size => 30 %><br/>
            <%= form_app.label :description %><br/>
            <%= form_app.text_area :description, placeholder: "Description...", :rows => 3  %>
              <%= form_app.hidden_field :etape_app_id, :value => 1 %>
              <%= form_app.hidden_field :etat_app_id, :value => 1 %>


            <%= form_app.fields_for :user_app_roles,@app.user_app_roles.build do |relation_fields|%>
              <%= relation_fields.hidden_field :user_id, :value => current_user.id %>
              <%= relation_fields.hidden_field :role_id, :value => 1 %>
            <% end %>
          </div>

          <div class = "actions">
            <%= form_app.submit "Créer", disable_with: 'Créer...', class: 'btn btn-large btn-primary' %>
          </div>

        <% end %>
        </div>

      </div>

      <a class="close-reveal-modal" arial-label="Close">&#215;</a>
    </div>
  </div>
  <%#= link_to 'Créer',mesapps_path(current_user[:id]) %>
</div>
