<%#= form_for @app do |f| %>
  <div class="field">

    <%= f.label :nom %><%= f.text_field :nom, :size => 30, class:'form-control'  %>
    <%#= f.label :niveau %><%#= f.select(:niveau_id, Niveau.all.map { |niveau| [niveau.nom, niveau.id] }, :prompt => true) %>
    <%= f.label :niveau %><%= f.text_field :niveau, :size => 30, class:'form-control'%>

    <%= f.label :etat %><%= f.select :etat_app_id, EtatApp.all.map { |etat_app| [etat_app.nom, etat_app.id] }, {:prompt => true}, {:class=>'form-control input-sm'}%>
    <%= f.label :etape %><%= f.select :etape_app_id, EtapeApp.all.map { |etape_app| [etape_app.nom, etape_app.id] }, {:prompt => true}, {:class=>'form-control input-sm'}%>
    <%= f.label :groupe %><%= f.select :groupe_app_id, GroupeApp.all.map { |groupe_app| [groupe_app.nom, groupe_app.id] }, {:prompt => true}, {:class=>'form-control input-sm'}%>


    <%=f.fields_for @app.user_app_roles do |uars| %>
      <% uar=resp_fonc?(uars) %>
        <%= f.fields_for uar do |uar_f|%>
          <%#= f.fields_for @user_app_roles do |uar_rf_f|%>
          <div class="field">
            <%#= uar_rf_f.hidden_field :role_id, :value => find_role("RF") %>
            <%= uar_f.label "Fonctionnel" %>
            <%= uar_f.select :user_id, User.all.map { |user| [user.uid, user.id] },
            {:prompt => true}, {multiple:'multiple',:class=>'multiselect form-control input-sm',:id=>"uar_fonc_multi"}%>
          </div>
      <% end %>

      <% uar=resp_tech?(uars)%>
      <%= f.fields_for uar do |uar_t|%>
          <div class="field">
            <%= uar_t.label "Technique" %>
            <%= uar_t.select :user_id, User.all.map { |user| [user.uid, user.id] },
            {:prompt => true}, {multiple:'multiple',:class=>'multiselect form-control input-sm',:id=>"uar_tech_multi"}%>
          </div>
      <% end %>
      <%#= f.fields_for :user_app_roles, @app.user_app_roles.build do |uar_rt_f|%>
      <%#= f.fields_for @user_app_roles do |uar_rt_f|%>
    <% end %>

    <%= f.label :description %><%= f.text_area :description %>
  </div>

<%# end %>
